<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.journeymanager"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.JourneyList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.JourneyEdit"
            android:parentActivityName=".activities.JourneyList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.JourneyList" />
        </activity>
        <activity
            android:name=".activities.JourneyInfo"
            android:label="@string/title_activity_city_info"
            android:parentActivityName="com.dani.notepad.Notepadv3">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dani.notepad.Notepadv3" />
        </activity>
    </application>

</manifest>
